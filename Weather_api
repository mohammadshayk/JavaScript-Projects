<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather API</title>
</head>
<body>
    <h1>Weather API</h1>
    <form>
        <input id="cityName" type="text" placeholder="Enter City Name">
        <input id="weather_data" type="submit" value="Find Weather Data"> 
    </form>
    <div id="demo"></div>
    <script>
        let weatherData = document.getElementById("weather_data");
        weatherData.addEventListener('click',function(e){
            e.preventDefault();
        let cityName = document.getElementById("cityName").value;
        let url = "https://api.openweathermap.org/data/2.5/weather?q="+cityName+"&appid=db60ddccdcb3b542fc6fba63ed108013";
        if(cityName === ""){
            alert("Enter City Name first");
        }
        else{
            fetch(url)
        
        .then(function(response){
            return response.json()
        })
        .then(function(data){
            html = 
            `<h3>City: ${data.name}<br></h3>` +
            `<h2>Temperature: ${data.main.temp}K<br></h2>` +
            `<h8>Feels Like: ${data.main.feels_like}K<br></h8>` +
            `<h8>Humidity: ${data.main.humidity}%<br></h8>` +
            `<h8>Pressure: ${data.main.pressure}hPa<br></h8>` +
            `<h8>Wind: ${data.wind.speed}Km/hr<br></h8>`

            document.getElementById("demo").innerHTML = html
            console.log(data);
        });
        };
        })
    </script>
</body>
</html>
